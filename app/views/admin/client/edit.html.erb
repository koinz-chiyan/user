<h1>Editing Client </h1>

<% form_for(:client, :url=>{:action=>'update', :id=>@client.id}) do |f| %>
  <%= f.error_messages %>

<table>
  <tr>
    <td align="left"><%= f.label :name %>:</td>
    <td align="left"><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td align="left"><%= f.label :client_id %>:</td>
    <td align="left"><%= f.text_field :client_id %></td>
  </tr>
  <tr>
    <td align="left"><%= f.label :client_secret %>:</td>
    <td align="left"><%= f.text_field :client_secret %></td>
  </tr>
</table>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
<%= link_to 'Back to Clients',  :action=>:index %>
